{
  "manifest_version": 3,
  "name": "Text Extractor Pro",
  "version": "1.0",
  "description": "Extract text from web pages and view local files",
  "permissions": [
    "activeTab",
    "storage",
    "scripting",
    "identity",
    "cookies",
    "contextMenus"
  ],
  "oauth2": {
    "client_id": "410225774953-pu75lt7cf5eg2hm4j3i6n0n2a5jjfe3n.apps.googleusercontent.com",
    "scopes": ["openid", "email", "profile"]
  },
  "host_permissions": [
    "http://localhost:3000/*",
    "<all_urls>",
    "file://*/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Extract Text"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>", "file://*/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["viewer.html"],
      "matches": ["<all_urls>", "file://*/*"]
    }
  ]
}